<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="18dp"
        android:text="Question number 1"/>

    <EditText
        android:id="@+id/quiz_add_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/poppins_light"
        android:hint="Question"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/question_update_id" />
        <TextView
            android:textAlignment="center"
            android:layout_weight=".10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A" />

        <EditText
            android:layout_weight=".80"
            android:id="@+id/quiz_add_question_answer_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/poppins_light"
            android:hint="Answer"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:layout_weight=".10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B" />

        <EditText
            android:layout_weight=".80"
            android:id="@+id/quiz_add_question_answer_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/poppins_light"
            android:hint="Answer"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:layout_weight=".10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C" />

        <EditText
            android:layout_weight=".80"
            android:id="@+id/quiz_add_question_answer_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/poppins_light"
            android:hint="Answer"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:layout_weight=".10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="D" />

        <EditText
            android:layout_weight=".80"
            android:id="@+id/quiz_add_question_answer_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/poppins_light"
            android:hint="Answer"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <Spinner
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingHorizontal="2dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/quiz_add_answer_data" />

    <View
        android:id="@+id/question_divider"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/button_primary"/>
</LinearLayout>