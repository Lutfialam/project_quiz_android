<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".QuizDetail">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        app:justifyContent="center"
        app:alignItems="center">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:src="@drawable/ic_undraw_ideas_flow_cy_7_b" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="Are you ready?"/>
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/quiz_detail_text"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="You will do the JHS quiz in 10 minutes. make sure you are ready to do it!"/>
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        app:justifyContent="space_evenly"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/quiz_back_button"
            android:text="Back to home"
            android:textColor="@color/white"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_primary"/>
        <Button
            android:id="@+id/quiz_detail_button"
            android:text="Start quiz"
            android:textColor="@color/white"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_primary"/>
    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>